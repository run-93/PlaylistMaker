<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/trackItem">


    <ImageView
        android:id="@+id/image_Cover"
        style="@style/trackItem.ImageView"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5.75"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/track_Name"
            android:text="Композиция"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="16sp"
            style="@style/trackItem.TextView"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/artist_Name"
                android:text="Исполнитель"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="11sp"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/ellipse_1"
                style="@style/trackItem.TextView"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/track_Time"
                android:layout_marginHorizontal="5dp"
                android:text="00:00"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="11sp"
                style="@style/trackItem.TextView"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vector_Icon"
        android:layout_gravity="center_vertical"
        android:drawableEnd="@drawable/bracket"
        android:layout_marginEnd="20dp"
        style="@style/trackItem.TextView"/>

</LinearLayout>
