<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbarSettings" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">22sp</item>
        <item name="titleTextColor">?attr/colorSecondaryVariant</item>

        <!-- Устанавливаем отступы согласно макету-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="toolbarMainScreen" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>

        <!-- Устанавливаем отступы согласно макету-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="titleMarginTop">0dp</item>
        <item name="titleMarginBottom">0dp</item>
    </style>

    <style name="buttonStyle"  parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">@dimen/main_screen_textSize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0</item>

        <!-- Отступы и другие атрибуты согласно макету-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginHorizontal">@dimen/main_screen_padding</item>
        <item name="android:layout_marginBottom">@dimen/main_screen_padding</item>
        <item name="cornerRadius">@dimen/radius_corner_Button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">1dp</item>
        <item name="iconTint">@color/text_button</item>

    </style>

    <style name="menuSetingsStyle">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settings_screen_textSize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>

        <!-- Отступы и другие атрибуты согласно макету-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/main_screen_padding</item>
        <item name="android:paddingVertical">@dimen/height_line</item>

        <!-- Цвета ползунка и фона для Switch-->
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>

    </style>

    <style name="editTextSearchStyle" parent="Widget.AppCompat.EditText">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/settings_screen_textSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:inputType">text</item>

        <!-- Отступы и другие атрибуты согласно макету-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/main_screen_padding</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:padding">8.5dp</item>
        <item name="android:drawablePadding">4dp</item>

    </style>

    <style name="deliteSearchString">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginHorizontal">18dp</item>
        <item name="backgroundTint">@color/windows_search</item>
        <item name="android:src">@drawable/delite_search</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="recyclerSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="trackItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="trackItem.ImageView">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="trackItem.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>