<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbarSettings" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">22sp</item>
        <item name="titleTextColor">?attr/colorSecondaryVariant</item>

        <!-- Устанавливаем отступы согласно макету-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="toolbarMainScreen" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>

        <!-- Устанавливаем отступы согласно макету-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="titleMarginTop">0dp</item>
        <item name="titleMarginBottom">0dp</item>
    </style>

    <style name="buttonStyle"  parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0</item>

        <!-- Отступы и другие атрибуты согласно макету-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="cornerRadius">@dimen/radius_corner_Button_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">1dp</item>
        <item name="iconTint">@color/text_button</item>

    </style>

    <style name="menuSetingsStyle">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>

        <!-- Отступы и другие атрибуты согласно макету-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/dimen_16</item>
        <item name="android:paddingVertical">@dimen/dimen_20</item>

        <!-- Цвета ползунка и фона для Switch-->
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>

    </style>

    <style name="editTextSearchStyle" parent="Widget.AppCompat.EditText">
        <!-- Устанавливаем шрифт, толщину, цвет и размер букв-->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:inputType">text</item>

        <!-- Отступы и другие атрибуты согласно макету-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_16</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:padding">8.5dp</item>
        <item name="android:drawablePadding">4dp</item>

    </style>

    <style name="deliteSearchString">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginHorizontal">18dp</item>
        <item name="backgroundTint">@color/windows_search</item>
        <item name="android:src">@drawable/delite_search</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="recyclerSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="trackItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="trackItem.ImageView">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="trackItem.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="placeholderErrorImage">
    <item name="android:layout_width">120dp</item>
    <item name="android:layout_height">120dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginTop">102dp</item>
    </style>

    <style name="placeholderErrorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="buttonUpdate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:text">@string/update</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="PlayerStyleGuideLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="playerStyleTrack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:text">Unknown</item>
    </style>

    <style name="playerStyleAdditionalInformation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text_color_hint</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/textSize_13</item>
    </style>

    <style name="playerStyleAdditionalInformationValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/textSize_13</item>
        <item name="android:text">Unknown</item>
    </style>


</resources>